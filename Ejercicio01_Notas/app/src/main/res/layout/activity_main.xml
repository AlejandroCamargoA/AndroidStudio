<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNota04"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Ingrese Nota 4"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota03" />

    <EditText
        android:id="@+id/txtNota01"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:hint="Ingrese Nota 1"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNota03"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Ingrese Nota 3"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota02" />

    <EditText
        android:id="@+id/txtNota02"
        android:layout_width="321dp"
        android:layout_height="53dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Ingrese Nota 2"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota01" />

    <Button
        android:id="@+id/btnMin"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:text="Nota Minima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMax" />

    <Button
        android:id="@+id/btnProm"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:text="Promedio"
        android:textColorHighlight="#E91E63"
        android:textColorLink="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNota04" />

    <Button
        android:id="@+id/btnMax"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:text="Nota Maxima"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProm" />

    <TextView
        android:id="@+id/txtMin"
        android:layout_width="143dp"
        android:layout_height="56dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnMin"
        app:layout_constraintTop_toBottomOf="@+id/txtMax" />

    <TextView
        android:id="@+id/txtProm"
        android:layout_width="143dp"
        android:layout_height="56dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/btnProm"
        app:layout_constraintTop_toBottomOf="@+id/txtNota04" />

    <TextView
        android:id="@+id/txtMax"
        android:layout_width="143dp"
        android:layout_height="56dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/btnMax"
        app:layout_constraintTop_toBottomOf="@+id/txtProm" />
</androidx.constraintlayout.widget.ConstraintLayout>